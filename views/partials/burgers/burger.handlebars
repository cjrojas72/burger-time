<li class="list-group-item d-flex justify-content-between align-items-center">
  {{burger}} - <small>{{status}}</small>

  {{#unless eaten}}
    <button data-id="{{id}}" class="ml-auto mr-1 mark-complete btn btn-info"><i class="fas fa-check"></i></button>
  {{/unless}}
  
  <button data-id="{{id}}" class="delete btn btn-danger"><i class="fas fa-trash-alt"></i> </button>
</li>